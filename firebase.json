{
  "functions": [
    {
      "source": "apps/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".genkit",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "serviceAccount.json"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "react-native": {
    "android_bypass_emulator_url_remap": true
  },
  "emulators": {
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true
    },
    "database": {
      "port": 9000,
      "host": "0.0.0.0"
    },
    "singleProjectMode": true
  }
}
