{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@/*": ["./src/*"],
      "@lymo/schemas/*": ["../../packages/schemas/src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
